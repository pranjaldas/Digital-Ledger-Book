<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"

    tools:context=".transaction.AddTransaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/icontext" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Total Amount:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/transaction_total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Amount in Rupees."
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Debit Amount:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/transaction_debit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Debit in Rupees"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Credit Amount:"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/transaction_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Credit in Rupees."
            android:inputType="phone" />


        <Button
            android:id="@+id/transaction_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/button"
            android:text="Add Transaction"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>